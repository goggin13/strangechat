# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /demo																		Application.demo

# User actions
GET     /signin																	Users.signin
GET     /signout																Users.signout
GET     /requestrandomroom 											Users.requestRandomRoom
GET     /leaveroom															Users.leaveRoom

# Chat actions
GET     /listen																  Notify.listen
POST     /newpower																Notify.newPower
GET     /adminlisten														Notify.adminListen
GET     /message																Notify.message
GET     /roommessage														Notify.roomMessage
GET 	  /heartbeat															Notify.heartbeat
GET			/imtyping																Notify.userIsTyping

# Ignore favicon requests
GET     /favicon.ico                            404

# Import Secure routes
*       /                                       module:secure

# Import CRUD routes
*      /admin              module:crud

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
